{
  "format_version": "1.20.10", // 使用一个较新的版本号
  "minecraft:entity": {
    "description": {
      "identifier": "zps:build_target",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups":{
    "des" : {
    "minecraft:instant_despawn": {}
    }
    },
    "components": {
      // --- 核心“无敌”组件 ---

      // 1. 伤害感应器：这是实现无敌的核心
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",         // 匹配所有伤害来源
          "deals_damage": false   // 设置为 false, 使其实际上不承受任何伤害
        }
      },

      // 2. 生命值：虽然不会受伤, 但实体需要有生命值组件才能存在
      "minecraft:health": {
        "value": 1,
        "max": 1
      },

      // 3. 击退抗性：完全抵抗击退效果
      "minecraft:knockback_resistance": {
        "value": 1.0 // 1.0 代表 100% 免疫击退
      },

      // --- 物理与交互豁免组件 ---

      // 4. 物理属性：移除重力, 使其无法被推动
      "minecraft:physics": {
        "has_gravity": false,   // 不受重力影响, 会悬浮在空中  // 无法被其他实体推动
        "push_towards_closest_space": false
      },
      
      "minecraft:pushable": {
  "is_pushable": false,
  "is_pushable_by_piston": false
},

      // 5. 碰撞箱：移除碰撞箱, 使其不占据任何物理空间
      "minecraft:collision_box": {
        "width": 0,
        "height": 0
      },

      // --- AI 目标与持久化组件 ---

      // 6. 实体家族：用于让建造者AI识别它
      "minecraft:type_family": {
        "family": [ "inanimate", "build_target" ] // "inanimate" 是一个好习惯, "build_target" 更具体
      },
      
      // 7. 持久化：防止实体在玩家远离时被自动清理
      "minecraft:persistent": {}
    },
    "events": {
    "despawn": {
        "add": {
          "component_groups": [ "des" ]
        }
      }
    }
  }
}
